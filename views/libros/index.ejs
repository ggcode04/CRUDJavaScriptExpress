            <table class="table table-light">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>NOMBRE</th>
                        <th>IMAGEN</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                        <tr>
                            <td> <%= libros[libro].id %> </td>
                            <td> <%= libros[libro].nombre %> </td>
                            <td> <%= libros[libro].imagen %> </td>
                            <td> Editar | Borrar </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
